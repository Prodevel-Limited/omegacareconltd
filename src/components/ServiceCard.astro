---
interface Props {
  title: string;
  description: string;
  icon?: string;
  link?: string;
  linkText?: string;
}

const { 
  title, 
  description, 
  icon = 'default',
  link = '/services',
  linkText = 'Learn More'
} = Astro.props;

// Icon SVG mapping
const icons: Record<string, string> = {
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  heart: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  users: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  default: 'M13 10V3L4 14h7v7l9-11h-7z',
};

const iconPath = icons[icon] || icons.default;
---

<div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 p-8 h-full flex flex-col border border-gray-100 hover:border-brand-burgundy">
  <!-- Icon -->
  <div class="mb-6">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-brand-burgundy/10 text-brand-burgundy group-hover:bg-brand-burgundy group-hover:text-white transition-all duration-300">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
      </svg>
    </div>
  </div>

  <!-- Content -->
  <h3 class="font-heading text-2xl font-bold text-brand-dark mb-4 group-hover:text-brand-burgundy transition-colors">
    {title}
  </h3>
  
  <p class="font-body text-gray-600 mb-6 flex-grow leading-relaxed">
    {description}
  </p>

  <!-- Link -->
  {link && (
    <a 
      href={link}
      class="inline-flex items-center text-brand-burgundy font-semibold hover:gap-2 transition-all group/link"
      aria-label={`Learn more about ${title}`}
    >
      {linkText}
      <svg class="w-5 h-5 ml-1 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  )}
</div>
