---
import { COMPANY, CONTACT, NAV_ITEMS } from '../constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-brand-dark text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div class="flex items-center justify-center w-10 h-10 rounded-full bg-brand-burgundy text-white font-bold">
            {COMPANY.shortName}
          </div>
          <span class="font-bold text-lg">{COMPANY.name}</span>
        </div>
        <p class="text-gray-300 text-sm">
          {COMPANY.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {NAV_ITEMS.map((item) => (
            <li>
              <a href={item.path} class="text-gray-300 hover:text-brand-burgundy transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          <li class="text-gray-300 text-sm">Residential Care Homes</li>
          <li class="text-gray-300 text-sm">Hospital Staffing</li>
          <li class="text-gray-300 text-sm">Specialized Care</li>
          <li class="text-gray-300 text-sm">24/7 Support</li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-brand-burgundy mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={CONTACT.phone.href} class="text-gray-300 hover:text-brand-burgundy transition-colors text-sm">
              {CONTACT.phone.display}
            </a>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-brand-burgundy mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={CONTACT.email.href} class="text-gray-300 hover:text-brand-burgundy transition-colors text-sm">
              {CONTACT.email.display}
            </a>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-brand-burgundy mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-gray-300 text-sm">{CONTACT.address.city}, {CONTACT.address.country}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex flex-col items-center md:items-start space-y-2">
          <p class="text-gray-400 text-sm">
            &copy; {currentYear} {COMPANY.name}. All rights reserved.
          </p>
          <p class="text-gray-500 text-xs">
            Website developed by <a href="https://prodevel.co.uk/contact/?ref=omegacareconltd.co.uk" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-brand-burgundy transition-colors">Prodevel Limited</a>
          </p>
        </div>
        <div class="flex items-center space-x-6">
          <a href="#" class="text-gray-400 hover:text-brand-burgundy transition-colors text-sm">
            Privacy Policy
          </a>
          <a href="#" class="text-gray-400 hover:text-brand-burgundy transition-colors text-sm">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
