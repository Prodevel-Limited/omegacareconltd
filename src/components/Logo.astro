---
import { COMPANY } from '../constants';
import LogoSvg from '../assets/images/logo_burgundy.svg';
import { Image } from 'astro:assets';

interface Props {
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
  class?: string;
}

const { 
  size = 'md',
  showText = true,
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'w-10 h-10',
  md: 'w-12 h-12',
  lg: 'w-16 h-16',
};

const textSizeClasses = {
  sm: 'text-xs',
  md: 'text-sm',
  lg: 'text-base',
};
---

<div class={`flex items-center justify-start ${className}`}>
  <!-- Logo SVG -->
  <Image src={LogoSvg} alt={COMPANY.name} width={50} height={50} />

  <!-- Text Label (optional) -->
  {showText && (
    <div class="hidden sm:block ml-2">
      <span class={`block text-brand-burgundy font-bold ${textSizeClasses[size]} leading-tight`}>
        {COMPANY.name}
      </span>
      <span class="block text-brand-dark text-xs">{COMPANY.tagline}</span>
    </div>
  )}
</div>
