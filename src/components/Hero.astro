---
import { Image } from 'astro:assets';
import Button from './Button.astro';
import defaultHeroImage from '../assets/hero-bg.png';

interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: ImageMetadata; 
  height?: 'small' | 'medium' | 'large';
}

const { 
  title, 
  subtitle, 
  ctaText = 'Get Started',
  ctaLink = '/contact',
  backgroundImage = defaultHeroImage,
  height = 'large'
} = Astro.props;

const heightClasses = {
  small: 'min-h-[400px]',
  medium: 'min-h-[500px]',
  large: 'min-h-[600px] lg:min-h-[700px]',
};
---

<section class={`relative ${heightClasses[height]} flex items-center justify-center overflow-hidden`}>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <Image 
      src={backgroundImage} 
      alt="Omega Care Con Ltd facility interior" 
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-brand-burgundy/90 via-brand-burgundy/80 to-brand-dark/90"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute inset-0 z-0 opacity-10 pointer-events-none">
    <div class="absolute top-20 left-10 w-64 h-64 bg-white rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
  </div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
    <div class="max-w-4xl mx-auto space-y-8">
      <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight">
        {title}
      </h1>
      
      {subtitle && (
        <p class="font-body text-xl sm:text-2xl text-white/95 max-w-2xl mx-auto leading-relaxed">
          {subtitle}
        </p>
      )}

      <slot name="content" />

      {ctaText && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
          <Button href={ctaLink} size="lg" class="text-brand-burgundy hover:bg-gray-400 font-semibold shadow-xl">
            {ctaText}
          </Button>
          <Button href="/services" variant="outline" size="lg" class="border-2 border-white text-white hover:bg-white hover:text-brand-burgundy font-semibold">
            Our Services
          </Button>
        </div>
      )}
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-10">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
    <span class="sr-only">Scroll down</span>
  </div>
</section>
