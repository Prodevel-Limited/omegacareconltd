---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Button from '../components/Button.astro';
import { COMPANY, STATS } from '../constants';
---

<Layout 
  title={`${COMPANY.name} - Professional Care Services Across the UK`}
  description={COMPANY.description}
>
  <!-- Hero Section -->
  <Hero 
    title="Professional Care Services Across the UK"
    subtitle="Delivering excellence in residential care and hospital staffing with compassion, reliability, and expertise."
    ctaText="Get Started Today"
    ctaLink="/contact"
  />

  <!-- Services Overview Section -->
  <section class="py-16 md:py-24 bg-white" aria-labelledby="services-heading">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 md:mb-16">
        <h2 id="services-heading" class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-brand-dark mb-4">
          Our Services
        </h2>
        <p class="font-body text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          We specialize in providing highly qualified care professionals to residential care homes and hospitals across the United Kingdom.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <ServiceCard
          title="Residential Care Homes"
          description="Expert carers for residential facilities, ensuring the highest standards of care and comfort for your residents with 24/7 support."
          icon="home"
          link="/services"
        />
        
        <ServiceCard
          title="Hospital Staffing"
          description="Professional healthcare staff for hospitals and medical facilities. Qualified nurses and support workers available at short notice."
          icon="heart"
          link="/services"
        />
        
        <ServiceCard
          title="Specialized Care"
          description="Tailored care solutions for specific needs including dementia care, palliative care, and complex medical requirements."
          icon="shield"
          link="/services"
        />
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="py-16 md:py-24 bg-brand-light" aria-labelledby="about-heading">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 id="about-heading" class="font-heading text-3xl md:text-4xl font-bold text-brand-dark mb-6">
            Why Choose {COMPANY.name}?
          </h2>
          <p class="font-body text-lg text-gray-700 mb-6 leading-relaxed">
            With years of experience in the healthcare sector, we understand the critical importance of quality care provision. Our commitment to excellence has made us a trusted partner for care homes and hospitals across the UK.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-brand-burgundy flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="font-heading font-semibold text-brand-dark">Qualified Professionals</h3>
                <p class="font-body text-gray-600">All our staff are fully trained, DBS checked, and experienced.</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-brand-burgundy flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="font-heading font-semibold text-brand-dark">24/7 Availability</h3>
                <p class="font-body text-gray-600">Round-the-clock support ensuring your staffing needs are always met.</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-brand-burgundy flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="font-heading font-semibold text-brand-dark">Rapid Response</h3>
                <p class="font-body text-gray-600">Quick placement services for emergency staffing requirements.</p>
              </div>
            </div>
          </div>
          <Button href="/about" variant="primary" size="lg">
            Learn More About Us
          </Button>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-white p-6 rounded-xl shadow-lg text-center transform hover:-translate-y-1 transition-transform">
            <div class="font-heading text-4xl font-bold text-brand-burgundy mb-2">{STATS.carers.value}</div>
            <div class="font-body text-gray-600">{STATS.carers.label}</div>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-lg text-center transform hover:-translate-y-1 transition-transform">
            <div class="font-heading text-4xl font-bold text-brand-burgundy mb-2">{STATS.facilities.value}</div>
            <div class="font-body text-gray-600">{STATS.facilities.label}</div>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-lg text-center transform hover:-translate-y-1 transition-transform">
            <div class="font-heading text-4xl font-bold text-brand-burgundy mb-2">{STATS.availability.value}</div>
            <div class="font-body text-gray-600">{STATS.availability.label}</div>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-lg text-center transform hover:-translate-y-1 transition-transform">
            <div class="font-heading text-4xl font-bold text-brand-burgundy mb-2">{STATS.experience.value}</div>
            <div class="font-body text-gray-600">{STATS.experience.label}</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-brand-burgundy to-brand-dark text-white" aria-labelledby="cta-heading">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 id="cta-heading" class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
        Ready to Get Started?
      </h2>
      <p class="font-body text-xl md:text-2xl mb-8 max-w-2xl mx-auto text-white/90">
        Contact us today to discuss your care staffing requirements. Our team is ready to help.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" size="lg" class="text-brand-burgundy hover:bg-gray-100">
          Contact Us Now
        </Button>
        <Button href="/services" variant="outline" size="lg" class="border-white text-white hover:bg-white hover:text-brand-burgundy">
          View All Services
        </Button>
      </div>
    </div>
  </section>
</Layout>
